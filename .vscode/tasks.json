{
	"tasks": [
		{
			// build c o cpp
			"type": "cppbuild",
			// Task name
			"label": "Build - Personal",
			"command": "/bin/gcc",
			// arguments for the gcc/cc compiler, add the .c files here
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				// files to include in the debugging
				"so_long.c",
				"so_draw.c",
				"so_scene.c",
				"so_player.c",
				"so_mngmt.c",
				"so_wall.c",
				"so_ocean.c",
				"so_door.c",
				"so_fish.c",
				"-I", "include",
				"-I", "MLX42/include",
				"-I", "libft/src",
				"-I", "libft/get_next_line",
				"-I", "libft/ft_printf",
				// compiler options
				"-L./libft/libft.a", 
				"MLX42/build/libmlx42.a", 
				"-ldl", 
				"-lglfw", 
				"-pthread", 
				"-lm",
				"-Wunreachable-code",
				"-Ofast",

				// -o: output file genterate in the build
				"-o",
				// compiled file generate and their path
				"${fileDirname}/main"
			],
			// options
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		}
	],
	"version": "2.0.0"
}
