{
	"tasks": [
		{
			// build c o cpp
			"type": "cppbuild",
			// Task name
			"label": "Build - Personal",
			"command": "/bin/gcc",
			// arguments for the gcc/cc compiler, add the .c files here
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				// files to include in the debugging
				"*.c",
				"-Lmlx_linux", "-lmlx_Linux", "-L/usr/lib", "-Imlx-linux", "-lXext", "-lX11", "-lm", "-lz",
				// alternative, put each c file
				// "file_1.c",
				// "file_2.c",
				// "main.c",
				// -o: output file genterate in the build
				"-o",
				// compiled file generate and their path
				"${fileDirname}/main"
			],
			// options
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		}
	],
	"version": "2.0.0"
}
